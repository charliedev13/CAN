{
  "name": "CAN Development Environment",
  "image": "mcr.microsoft.com/devcontainers/python:3.10",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "moby": false
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python"
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "postCreateCommand": "test -f .env || cp .env.codespaces .env; pip3 install -r backend/requirements.txt && pip3 install -r frontend/requirements.txt",
  "postStartCommand": "docker compose up -d || true",
  "forwardPorts": [8000, 8050, 8080, 3306],
  "remoteUser": "vscode"
}
