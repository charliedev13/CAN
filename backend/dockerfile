# =====================================================
# BACKEND CAN â€“ FastAPI + SQLAlchemy + MySQL
# =====================================================

FROM python:3.10-slim

# Evita messaggi interattivi e riduce layer
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

WORKDIR /app

RUN apt-get update && apt-get install -y curl && rm -rf /var/lib/apt/lists/*

# Installazione sicura e leggera delle dipendenze
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copia del codice backend
COPY . .

# Porta del backend (FastAPI)
EXPOSE 8000

# Healthcheck (opzionale ma utile)
HEALTHCHECK CMD curl --fail http://localhost:8000/docs || exit 1

# Comando di default (sovrascritto da docker-compose)
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8000"]